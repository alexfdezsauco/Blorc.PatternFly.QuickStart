@using Blorc.PatternFly.Components.Alert
@using Blorc.PatternFly.Components.Icon

<Alert Title="@Title" AlertType="@AlertType.Info">
    <Description>
        <PencilAltIcon/>
        <span class="text-nowrap">
            Please take our
            <a target="_blank" class="font-weight-bold" href="https://go.microsoft.com/fwlink/?linkid=2109206">brief survey</a>
        </span>
        and tell us what you think.
    </Description>
</Alert>

@code {
    // Demonstrates how a parent component can supply parameters
    [Parameter]
    public string Title { get; set; }
}
